{% extends "back_template.html.twig" %}
{% block title %}Adresses{% endblock %}
{% block adminContent %}
    <h2 class="dce-text-dark dce-bg-light text-center underlined">
        Adresses
    </h2>
    {% if places is not empty %}
        <div class="tab-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for place in places %}
                    <tr>
                        <td>{{ place.name }}</td>
                        <td>{{ place.address }}</td>
                        <td>
                            <a href="{{ path("back_place", {"id": place.id}) }}"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    {% else %}
        <h3>
            Aucune adresse Ã  afficher.
        </h3>
    {% endif %}
{% endblock %}