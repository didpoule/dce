            <p>
                <a href="{{ path('back_contacts') }}" class="dce-btn dce-btn-red">Tout voir</a>
            </p>
        </div>
    </div>
    <div class="card mb-5 col-md-5 col-sm-12 text-center"
         onclick="window.location = '{{ path('back_posts') }}'">
