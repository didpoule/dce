{% extends "back_template.html.twig" %}
{% block title %}Administration{% endblock %}
{% block adminContent %}
    <h2 class="dce-text-dark dce-bg-light text-center underlined">Tableau de bord</h2>
    <div class="container-fluid">
    <div class="row">
    <div class="card mb-5 col-md-5 col-sm-12 text-center"
         onclick="window.location = '{{ path('back_bookings', {'id': event.id}) }}'">
        <div class="card-body">
            <h3>{{ event.title }}</h3>
            <div class="dashboard-number">
                <span>{{ event.nbBookings }}</span>
            </div>
            <h4>r√©servations</h4>
            <p>
                <a href="{{ path('back_bookings', {'id': event.id}) }}" class="dce-btn dce-btn-red">Tout voir</a>
            </p>
        </div>
    </div>
    <div class="card mb-5 offset-md-2 col-md-5 col-sm-12 text-center"
         onclick="window.location = '{{ path('back_contacts') }}'">
        <div class="card-body">
            <h3>Contact</h3>
            <div class="dashboard-number">
                <span>{{ contact }}</span>
            </div>
