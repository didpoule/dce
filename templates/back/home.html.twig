        <h3>Galeries</h3>
        <div class="dashboard-number">
            <span>{{ pictures }}</span>
        </div>
        <h4>photos</h4>
        <p>
            <a href="{{ path('back_galleries') }}" class="dce-btn dce-btn-red">Tout voir</a>
        </p>
