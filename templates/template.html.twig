<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('build/css/app_front.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
          integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    {% block head %} {% endblock %}
    <title>{% block title %}{% endblock %} - Dance Concept event</title>
</head>
<body>
<div id="page-content" class="container-fluid p-0">
    <header id="header" class="dce-bg-dark">
        <menu class="d-flex" id="main-menu">
            <li class="d-flex flex-column" id="logo-container">
                <a href="{{ path('front_home') }}">
                    <img src="{{ absolute_url(asset('build/images/dce.9342630e.png')) }}" alt="logo dce" id="logo">
                </a>
            </li>
            <li class="d-flex flex-column">
                <a href="{{ path('front_posts') }}">News</a>
                <div class="menu-underline"></div>
            </li>
            <li class="d-flex flex-column">
                <a href="{{ path('front_team') }}">La team</a>
                <div class="menu-underline"></div>
            </li>
            <li class="d-flex flex-column">
                <a href="{{ path('front_club') }}">Le club</a>
                <div class="menu-underline"></div>
            </li>
            <li class="dropdown show d-flex flex-column">
                <a href="{{ path('front_events') }}" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true"
                   aria-expanded="false" id="workMenu">
                    Workshops
                </a>
                <div class="menu-underline"></div>
                <ul class="dropdown-menu" role="menu" aria-labelledby="workMenu">
                    {{ render(controller('App\\Controller\\FrontController::nextWorkshopsAction', {'limit' : 3})) }}
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><a href="{{ path('front_events') }}">Tous voir</a></li>

                </ul>
            </li>
            <li class="dropdown show d-flex flex-column">
                <a href="{{ path("front_galleries") }}" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true"
                   aria-expanded="false" id="galerieMenu">
                    Galeries
                </a>
                <div class="menu-underline"></div>
                <ul class="dropdown-menu" role="menu" aria-labelledby="galerieMenu">
                    {{ render(controller('App\\Controller\\FrontController::lastGalleriesAction', {'limit' : 3})) }}
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><a href="{{ path('front_galleries') }}">Tous voir</a></li>
                </ul>
            </li>
            <li class="dropdown show d-flex flex-column">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true"
                   aria-expanded="false" id="prestationsMenu">
                    Prestations
                </a>
                <div class="menu-underline"></div>
                <ul class="dropdown-menu" role="menu" aria-labelledby="prestationskMenu">
                    {{ render(controller('App\\Controller\\FrontController::servicesAction')) }}
                </ul>
            </li>
            <li class="d-flex flex-column">
                <a href="{{ path('front_contact') }}">Contact</a>
                <div class="menu-underline"></div>
            </li>
        </menu>
    </header>
    {% block flash %}
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('info') %}
            <div class="container alert alert-info" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('warning') %}
            <div class="container alert alert-warning" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('danger') %}
            <div class="container alert alert-danger" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
    {% endblock %}
    {% block pageContent %} {% endblock %}
    <footer class="dce-bg-dark">
        <div class="row dce-text-light">
            <div class="col-md-3 footer-widget">
                <ul>
                    <li>Site réalisé par Jordan Brito</li>
                    <li>© www.danceconceptevent.com</li>
                    <li><a href="{{ path('back_home') }}" class="dce-text-light">Administration</a></li>
                </ul>
            </div>
            <div class="col-md-4 text-center footer-widget">
                <ul class="flex-row">
                    <li><a href="#" class="instagram"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#" class="facebook"><i class="fab fa-facebook-square"></i></a></li>
                    <li><a href="#" class="twitter"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#" class="youtube"><i class="fab fa-youtube"></i></a></li>
                    <li><a href="#" class="snapchat"><i class="fab fa-snapchat"></i></a></li>
                </ul>
            </div>
            <div class="col-md-3 text-left footer-widget">
                <ul>
                    <li><a href="#" class="dce-text-light">Mentions légales</a></li>
                    <li><a href="#" class="dce-text-light">Conditions Générales d'utilisation</a></li>
                    <li><a href="#" class="dce-text-light">RGPD</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>
<script src="{{ asset('build/js/app.js') }}"></script>
{% block scripts %}{% endblock %}
</body>
</html>